<p id="notice"><%= notice %></p>

<p>
  <strong>Nickname:</strong>
  <%= @user.nickname %>
</p>

<p>
  <strong>Avatar url:</strong>
  <%= @user.avatar_url %>
</p>

<p>
<% following = Following.new %>
<% following.leader_id = @user.id %>
<% following.follower_id = current_user.id %>

  <%= form_for following do |f| %>
    <%= f.hidden_field :leader_id %>
    <%= f.hidden_field :follower_id %>
    <%= f.submit "Follow", :class => "btn btn-success" %>
  <% end %>
</p>

<p>
  <%= button_to "Follow", followings_url(:following => { :leader_id => @user.id, :follower_id => current_user.id }), :class => "btn btn-warning" %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

<h3>Photos from users I follow</h3>

<ul>
  <% @user.timeline.order("created_at DESC").each do |photo| %>
    <li>
      <%= image_tag photo.image_url, :width => 240 %>
      <p><%= photo.caption %></p>
    </li>
  <% end %>
</ul>

<h3>My Photos</h3>

<ul>
  <% @user.own_photos.each do |photo| %>
    <li>
      <%= image_tag photo.image_url, :width => 240 %>
      <p><%= photo.caption %></p>
    </li>
  <% end %>
</ul>

<h3>Favorite Photos</h3>

<ul>
  <% @user.favorite_photos.each do |photo| %>
    <li>
      <%= image_tag photo.image_url, :width => 240 %>
      <p><%= photo.caption %></p>
    </li>
  <% end %>
</ul>
